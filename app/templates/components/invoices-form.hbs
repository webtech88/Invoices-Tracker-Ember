{{#if isShowingUpdateModalDialog}}
{{#modal-dialog
    targetAttachment='none'
    containerClass=customContainerClassNames
    overlayClass='custom-styles-overlay'
}}
<form>
    <div class="row">
        <div class="col-4">
            {{pikaday-input 
                format="YYYY/MM/DD" 
                class="form-control" 
                placeholder="Due date of invoice"
                useUTC=true 
                onSelection=(action (mut selectedInvoiceDueDate)) 
                onOpen=(action 'openDatePicker')
                value=selectedInvoiceDueDate
                readonly="readonly"}}
        </div>
        <div class="col-4">
            {{input value=(mut selectedInvoiceAmount)  class="form-control" placeholder="Amount"}}
        </div>
        <div class="col-2">
            <button {{action "updateInvoice"}} type="button" class="btn btn-primary">Update</button>
        </div>
        <div class="col-2">
            <button onclick={{action (mut isShowingUpdateModalDialog) false}} class="btn btn-danger">Cancel</button>
        </div>
    </div>
</form>

{{/modal-dialog}}
{{/if}}

{{#if isShowingDeleteConfirmModalDialog}}
{{#modal-dialog
    targetAttachment='none'
    containerClass=customContainerClassNames
    overlayClass='custom-styles-overlay'
}}
<div>Are you sure to delete the invoice({{deletingInvoiceNumber}})?</div>
<div class="row">
    <div class="col-3">
        <button {{action "confirmDelete"}} type="button" class="btn btn-danger">Yes</button>
    </div>
    <div class="col-3">
        <button onclick={{action (mut isShowingDeleteConfirmModalDialog) false}} class="btn btn-primary">Cancel</button>
    </div>
</div>

{{/modal-dialog}}
{{/if}}
<form>
    <div class="row">
        <div class="col">
            {{!-- {{input value=invoiceNumber class="form-control" placeholder="Date"}} --}}
            {{pikaday-input 
                format="YYYY/MM/DD" 
                class="form-control" 
                placeholder="Due date of invoice"
                useUTC=true 
                onSelection=(action (mut newDate)) 
                onOpen=(action 'openDatePicker')
                value=newDate 
                readonly="readonly"}}
        </div>
        <div class="col">
            {{input value=invoiceAmount class="form-control" placeholder="Amount"}}
        </div>
        <div class="col">
            <button {{action "addInvoice"}} type="button" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
<br>
<div id="list" class="row">
    <div class="table-responsive col-md-12">
        <table class="table table-striped table-condensed" cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <th {{action "sort" "dueDate"}} class="cursor-pointer">Due date</th>
                    <th {{action "sort" "num"}} class="cursor-pointer">Invoice Number</th>
                    <th {{action "sort" "amount"}} class="cursor-pointer">Amount</th {{action "sort" "amoun"}}>
                    <th class="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each invoices as |invoice index|}}
                <tr>
                    <td>{{invoice.dueDate}}</td>
                    <td>{{invoice.num}}</td>
                    <td>{{invoice.amount}}</td>
                    <td class="actions">
                        <button type="button" class="btn btn-warning btn-xs"
                            {{action "openUpdateDialog" index}}>Edit</button>
                        <button {{action "deleteInvoice" index}} type="button"
                            class="btn btn-danger btn-xs">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>